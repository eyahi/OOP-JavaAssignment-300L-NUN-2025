<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.booking.ui.MainController"
      alignment="CENTER"
      spacing="20">
  <padding>
    <Insets top="50" bottom="50" left="20" right="20"/>
  </padding>

  <Button fx:id="btnSearch"
          text="Search and Book"
          onAction="#onSearch"
          prefWidth="200"/>
  <Button fx:id="btnView"
          text="View Bookings"
          onAction="#onView"
          prefWidth="200"/>
  <Button fx:id="btnReceipt"
          text="Generate Receipt"
          onAction="#onReceipt"
          prefWidth="200"/>
</VBox>
