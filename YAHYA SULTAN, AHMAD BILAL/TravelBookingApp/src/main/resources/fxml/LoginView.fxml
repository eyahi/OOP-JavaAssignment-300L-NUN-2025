<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.booking.ui.LoginController"
      alignment="CENTER" spacing="15"
      prefWidth="360" prefHeight="640"
      styleClass="login-pane">
  <padding><Insets top="50" right="20" bottom="50" left="20"/></padding>

  <TextField fx:id="usernameField"
             promptText="Username" prefWidth="250"/>
  <PasswordField fx:id="passwordField"
                 promptText="Password" prefWidth="250"/>

  <Button text="Default Account"
          onAction="#onDefault"
          prefWidth="250"/>
  <Button text="Create Account"
          onAction="#onCreate"
          prefWidth="250"/>
  <Button text="Login"
          onAction="#onLogin"
          prefWidth="250"/>
</VBox>
